<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">
    <TextView
        android:id="@+id/width_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="width initial"
        android:textColor="#0097A7"/>

    <EditText
        android:id="@+id/width_initial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/width_text_view"
        android:hint="input the initial width"
        android:inputType="numberDecimal"
        android:textColor="#212121"/>

    <ImageView
        android:id="@+id/warning_width"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_dilarang"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/height_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/width_initial"
        android:text="height initial"
        android:textColor="#0097A7"/>

    <EditText
        android:id="@+id/height_initial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/height_text_view"
        android:hint="input the initial height"
        android:inputType="numberDecimal"
        android:textColor="#212121"/>

    <ImageView
        android:id="@+id/warning_heiht"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/width_initial"
        android:src="@drawable/icon_dilarang"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/asset_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/height_initial"
        android:text="asset Initial"
        android:textColor="#0097A7"/>

    <Spinner
        android:id="@+id/asset_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_text_view"
        android:layout_marginBottom="8dp"
        android:textColor="#212121"/>

    <Button
        android:id="@+id/convert_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_spinner"
        android:onClick="displayAssetSize"
        android:text="convert"
        android:textColor="#FFF"/>

    <ScrollView
        android:id="@+id/asset_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/convert_button"
        android:visibility="gone">

        <LinearLayout
